@page "{id:int}"
@model MigrationTester.Pages.Results.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Enter test results for @Model.Result.Gcc.Name</h1>



<h4>Task: @Model.Test.TaskName - @Model.Test.Action</h4>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <input type="hidden" asp-for="Result.TestId"/>
            <input type="hidden" asp-for="Result.ResultId"/>
            <input type="hidden" asp-for="Result.GccId"/>
   
            <div class="form-group">
                <label asp-for="Result.ModifiedOn" class="control-label"></label>
                <input asp-for="Result.ModifiedOn" class="form-control" />
                <span asp-validation-for="Result.ModifiedOn" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Result.Comments" class="control-label"></label>
                <input asp-for="Result.Comments" class="form-control" />
                <span asp-validation-for="Result.Comments" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Result.RoleId" class="control-label"></label>
                <select asp-for="Result.RoleId" class ="form-control" asp-items="ViewBag.Role"></select>
            </div>
            <div class="form-group">
                <label asp-for="Result.Tester" class="control-label"></label>
                <input asp-for="Result.Tester" class="form-control" />
                <span asp-validation-for="Result.Tester" class="text-danger"></span>
            </div>
               <div class="form-group">
                <label asp-for="Result.Ticketnr" class="control-label"></label>
                <input asp-for="Result.Ticketnr" class="form-control" />
                <span asp-validation-for="Result.Ticketnr" class="text-danger"></span>
            </div>
         <div class="form-group">
                <label asp-for="Result.TestStatus" class="control-label"></label>
                <select asp-for="Result.TestStatus" class ="form-control" asp-items="ViewBag.TestStatus"></select>
            </div>
          
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
