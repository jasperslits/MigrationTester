@page "{id:int?}"
@model MigrationTester.Pages.RoleTest.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>TestRole</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TestRole.TestId" />
               <div class="form-group">
                <label class="control-label">Roles</label><br/><br/>
                @for (int i = 0; i < Model.Roles.Count; i++) {
                     <input name="AssignedRoles" type="checkbox" value="@Model.Roles[i].RoleId" @if(@Model.AssignedRoles[i] != 0) { <text>checked</text> }/> @Model.Roles[i].Name <br/> 
                }
            </div>
          
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
